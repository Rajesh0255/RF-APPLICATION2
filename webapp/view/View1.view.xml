<mvc:View controllerName="com.app.rfapplication2.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:unified="sap.ui.unified"
    xmlns:form="sap.ui.layout.form"
    xmlns:ndc="sap.ndc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    height="100%"
    xmlns:layout="sap.ui.layout"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
  >
    <Page id="pageInitial">
        <content>
        <HBox >
                    <FlexBox
                id="_IDGenFlexBoxInitial"
                
                direction="Column"
                alignItems="Start"
                width="40%"
                
            >
            <HBox >
                <VBox
                    id="environmentButtonsHBox"
                    class="sapUiSmallMargin boxContainer"
                    alignItems="Center"
                >
                    <VBox id="idvboxnavbuttons" width="auto">
                        <HBox
                            id="idHboxinitial"
                            alignContent="Start"
                            class="boxContainer2"
                            width="auto"
                            height="40%"
                        >
                            <Image
                                id="idImageLogoAvatarinitial"
                                src="https://artihcus.com/assets/img/AG-logo.png"
                                class="sapUiSmallMarginEnd logo"
                                width="85%"
                                height="35%"
                            />
                            <Title
                                id="initialscreentitle"
                                text="CAPmodel RF"
                                class="capModelRFText sapUiSmallMarginBottom"
                            />
                        </HBox>
                        <!-- New HBox for buttons directly below the logo -->
                        <HBox
                            id="idHboxButtons"
                            alignContent="Start"
                            class="sapUiTinyMarginBegin"
                        >
                        
<!--                             <Button
                                id="idButtonAdd"
                                icon="sap-icon://add"
                                tooltip="Add"
                                press="handleAddPress"
                                class="button"
                            />
                            <Button
                                id="idButtonEdit"
                                icon="sap-icon://edit"
                                tooltip="Edit"
                                press="onEditConfiguredSystem"
                                class="button1"
                            />
                            <Button
                                id="idButtonDelete"
                                icon="sap-icon://delete"
                                tooltip="Delete"
                                press="onDeleteConfiguredSystem"
                                class="button2"
                            /> -->
                            <VBox id="idbuttonvbox">
                                <Button
                                    id="idButtonAdd"
                                    icon="sap-icon://add"
                                    tooltip="Add"
                                    press="handleAddPress"
                                    type="Transparent"
                                    class="Butns"
                                />
                                <Text id="idbuttontext" text="Add" class="InitialButton67" />
                            </VBox>
                            <VBox id="idbuttonvbox2">
                                <Button
                                    id="idButtonEdit"
                                    icon="sap-icon://edit"
                                    tooltip="Edit"
                                    press="onEditConfiguredSystem"
                                    type="Transparent"
                                    class="Butns"
                                />
                                <Text id="idbuttontext1" text="Edit" class="InitialButton67" />
                            </VBox>
                            <VBox id="idbuttonvbox3">
                                <Button
                                    id="idButtonDelete"
                                    icon="sap-icon://delete"
                                    tooltip="Delete"
                                    press="onDeleteConfiguredSystem"
                                    type="Transparent"
                                    class="Butns"
                                />
                                <Text id="idbuttontext2" text="Delete" class="InitialButton67" />
                            </VBox>
                        </HBox>

                        <!-- New HBox for navigation buttons -->
                    </VBox>

                    <!-- Link for configuring SAP system -->
                    <Button
                        id="_IDCofiguresapLink"
                        text="Configure SAP system"
                        press="handleLinksapPress"
                        type="Transparent"
                    />
                    <HBox id="IDhboxnavup">
                        <Button
                            id="upNavigationButtonId"
                            icon="sap-icon://navigation-up-arrow"
                            tooltip="Previous"
                            press="onNavNext"
                            visible="false"
                        />
                    </HBox>
                    <HBox
                        id="idHboxNavigation"
                        alignContent="Start"
                        class="sapUiSmallMarginTop"
                    >
                        <Button
                            id="downNavigationButtonId"
                            icon="sap-icon://navigation-down-arrow"
                            tooltip="Next"
                            press="onNavPrevious"
                        />
                    </HBox>
                </VBox>
                </HBox>
            </FlexBox>
            <FlexBox 
            id = "NewBox"
             height="100%"
             direction="Row"
                alignItems="Center">
            
            <VBox >
           
            
            
            </VBox>
            
            </FlexBox>
            </HBox>
        </content>
    </Page>
</mvc:View>
